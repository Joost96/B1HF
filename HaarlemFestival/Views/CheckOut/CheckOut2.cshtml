@model HaarlemFestival.Model.PagePlusOrderPlusLogin

@{
    ViewBag.Title = "CheckOut2";
}

@{
    Layout = "_CheckOutLayout.cshtml";
}



<section class="CheckOut2">
    <section class="CheckOut2Content">

        @using (Html.BeginForm("Checkout2", "CheckOut", FormMethod.Post, new { id = "CheckOut2Form" }))
        {
            <section class="LinkerColom">
                <p class="CheckOut2Label">First Name: <label class="Verplicht">*</label></p>
                @Html.TextBoxFor(model => model.Orders[0].Customer.FirstName, new { @class = "CheckOut2TBox", @required = "required" })
                @*<input type="text" value="@Model.Orders[0].Customer.FirstName" />*@
            </section>
            <section class="RechterColom">
                <p class="CheckOut2Label">Last Name: <label class="Verplicht">*</label></p>
                @Html.TextBoxFor(model => model.Orders[0].Customer.LastName, new { @class = "CheckOut2TBox", @required = "required" })
                @*<input type="text" value="@Model.Orders[0].Customer.LastName" />*@
            </section>
            <section class="LinkerColom">
                <p class="CheckOut2Label">Email: <label class="Verplicht">*</label></p>
                @Html.TextBoxFor(model => model.Orders[0].Customer.Email, new { @class = "CheckOut2TBox", @required = "required" })
                @*<input type="text" value="@Model.Orders[0].Customer.Email" />*@
            </section>
            <section class="RechterColom">
                <p class="CheckOut2Label">Country: </p>
                @Html.TextBoxFor(model => model.Orders[0].Customer.Country, new { @class = "CheckOut2TBox", })
                @*<input type="text" value="@Model.Orders[0].Customer.Country" />*@
            </section>

                <input id="CheckOut2RegisterCheck" type="checkbox" name="Would you like to register?"/>
                <label>Would you like to register?</label>


            <section id="Password1" class="LinkerColom">
                <p class="CheckOut2Label">Password : <label class="Verplicht">*</label></p>
                @Html.TextBoxFor(model => model.Orders[0].Customer.Password, new { @class = "CheckOut2TBox", @required = "required", id = "PasswordBox" })
                @*<input type="text" value="@Model.Orders[0].Customer.Password" />*@
            </section>
            <section id="ConfirmPassword" class="LinkerColom">
                <p  class="CheckOut2Label">Confirm password : <label class="Verplicht">*</label></p>
                <input id="ConfirmPasswordBox" class = "CheckOut2TBox" type="password" />
            </section>

            <section class="buttonDiv">
                <button id="Step2ButttonStep1" onclick="location.href = '@Url.Action("Checkout1", "CheckOut")' ">Step 1</button>
                <button id="Step2ButttonContinue" @*onclick="location.href = '@Url.Action("Checkout3", "CheckOut")'*@ type="submit">Continue</button>
            </section>
        }
    </section>
</section>