@model HaarlemFestival.Model.PagePlusActivities

@{
    ViewBag.Title = "Jazz";
}

@section AddToScripts{
    <script src="@Url.Content("~/Scripts/Jazz.js")"></script>
}

<section class="jazz_page_section">
    <section class="jazz_page_info">
        <section class="jazz_page_info_hp">
            <h3 class="jazz_page_info_h">@Model.Page.PageDescriptions[0].Title</h3>
            <hr class="jazz_page_info_line"/>
            <p class="jazz_page_info_p">@Model.Page.PageDescriptions[0].DescriptionText</p>
        </section>
        <section class="jazz_page_info_locatiepatronaat">
            <h4 class="jazz_page_info_locatiepatronaat_h">@Model.Page.PageDescriptions[1].Title</h4>
            <p class="jazz_page_info_locatiepatronaat_p">@Html.Raw(HttpUtility.HtmlDecode(Model.Page.PageDescriptions[1].DescriptionText))</p>
        </section>
        <section class="jazz_page_info_locatiegrotemarkt">
            <h4 class="jazz_page_info_locatiegrotemarkt_h">@Model.Page.PageDescriptions[2].Title</h4>
            <p class="jazz_page_info_locatiegrotemarkt_p">@Html.Raw(HttpUtility.HtmlDecode(Model.Page.PageDescriptions[2].DescriptionText))</p>
        </section>
    </section>

    <section class="jazz_page_program_days">
        <h3 class="jazz_page_program_days_header">@Model.Page.PageDescriptions[3].Title</h3>

        <button name="thursday" type="submit" class="jazz_page_program_thursday" tabindex="1" onclick="location.href='@Url.Action("Index", "Jazz", new { id=1})'">@Model.Page.PageDescriptions[4].Title<br />@Model.Page.PageDescriptions[4].DescriptionText</button>
        <button name="friday" type="submit" class="jazz_page_program_friday" tabindex="2" onclick="location.href='@Url.Action("Index", "Jazz", new { id=2})'">@Model.Page.PageDescriptions[5].Title<br />@Model.Page.PageDescriptions[5].DescriptionText</button>
        <button name="saturday" type="submit" class="jazz_page_program_saturday" tabindex="3" onclick="location.href='@Url.Action("Index", "Jazz", new { id=3})'">@Model.Page.PageDescriptions[6].Title<br />@Model.Page.PageDescriptions[6].DescriptionText</button>
        <button name="sunday" type="submit" class="jazz_page_program_sunday" tabindex="4" onclick="location.href='@Url.Action("Index", "Jazz", new { id=4})'">@Model.Page.PageDescriptions[7].Title<br />@Model.Page.PageDescriptions[7].DescriptionText</button>
        
        <button name="passpartout" type="submit" class="jazz_page_program_passpartout" tabindex="5">@Model.Page.PageDescriptions[8].Title</button>
    </section>

    @for (int i = 0; i < Model.Activities.Count; i++)
    {
        <section class="jazz_page_acts">
            <section class="jazz_page_imgsection">
                <img src=@Model.Activities[i].ActivityDescriptions[0].ImageUrl width="280" height="280" alt="Jazz @Model.Activities[i].ActivityDescriptions[0].Title" />
            </section>
            <section class="jazz_page_actinfosection">
                <section>
                    <h3 id="jazz_activity_title_@Model.Activities[i].Id" class="jazz_activiteit_title">@Model.Activities[i].ActivityDescriptions[0].Title</h3>
                    <p>@Model.Activities[i].ActivityDescriptions[0].DescriptionText</p>
                </section>
                <hr class="jazz_page_actinfosection_line"/>
                <section>
                    <p id="jazz_activity_location_@Model.Activities[i].Id" class="jazz_activiteit_location">@Model.Page.PageDescriptions[9].Title @Model.Activities[i].Location.Name</p>
                    <p id="jazz_activity_hall_@Model.Activities[i].Id" class="jazz_activiteit_hall">@Model.Page.PageDescriptions[10].Title @Model.Activities[i].Timeslots[0].Hall</p>
                    <p id="jazz_activity_price_@Model.Activities[i].Id" class="jazz_activiteit_price">@Model.Page.PageDescriptions[11].Title €@Model.Activities[i].Timeslots[0].Tickets[0].Price</p>
                    <p id="jazz_activity_time_@Model.Activities[i].Id" class="jazz_activiteit_time">@Model.Page.PageDescriptions[12].Title @Model.Activities[i].Timeslots[0].StartTime.ToString("HH:mm") - @Model.Activities[i].Timeslots[0].EndTime.ToString("HH:mm")</p>
                    <button id=@Model.Activities[i].Id class="jazz_page_buybtn" type="button">@Model.Page.PageDescriptions[13].Title</button>
                </section>
            </section>
        </section>
        <p id="jazz_activity_datum_@Model.Activities[i].Id" style="visibility:hidden">@Model.Activities[i].Timeslots[0].StartTime.ToString("dd/MM/yyyy")</p>
        <p id="jazz_activity_ticket_price_@Model.Activities[i].Id" style="visibility:hidden">@Model.Activities[i].Timeslots[0].Tickets[0].Price</p>

    }

    <!-- The Modal -->
    <section id="myModal" class="modal">

        <!-- Modal content -->
        <section class="modal-content">
            <span class="close">&times;</span>
            <p class="modaltitle">1</p>
            <p class="modallocation">2</p>
            <p class="modalhall">3</p>
            <p class="modalprice">4</p>
            <p class="modaltime">5</p>
            <p class="modaldatum">6</p>
            <label>Aantal</label>
            <input type="text" class="jazz_order_aantal"/>
            @Html.ActionLink("Home", "Index", "Home", new { activityId = "a", timeslot = "b", tickettype = 0, aantal = "d", totaalprijs = "e"}, new { @class="jazz_order_btn"})
        </section>

    </section>

</section>

