@using HaarlemFestival.Model;
@model HaarlemFestival.Model.PagePlusDescriptions
@{
    ViewBag.Title = "Index";
}

                                    

<section class="TalkingIntro">

    <h2 class="TalkingHeader">@Model.Page.PageDescriptions[0].Title</h2>

    <p class="TalkingIntroText">
       @Html.Raw(Model.Page.PageDescriptions[0].DescriptionText + " " + Model.ActivityDescriptions[0].Location.) 
    </p>

</section>



@foreach (Activity a in Model.ActivityDescriptions)
{
    

<section class="TalkingEvent">
    
    <section class="TalkingDag">
        <header class="TalkingDagHeader">
        @a.Timeslots[0].StartTime.DayOfWeek
        </header>
        <header class="TalkingDagHeader">
            @a.Timeslots[0].StartTime.ToString("dd/MM/yyyy")
        </header>
    </section>

    <section class="TalkingSpreker">

        <img class="TalkingSprekerImg" />

        <section class="TalkingSprekerUitleg">

            <h2 class="TalkingSprekerHeader">
                @a.ActivityDescriptions[0].Title

            </h2>
            <p class="TalkingSprekerText">
                @a.ActivityDescriptions[0].DescriptionText
            </p>

        </section>

        <button id = @Html.Raw(a.ActivityDescriptions[0].Title + "Button") name="AskAQuestion" type="button" class="TalkingButtonSpreker">Ask Question</button>

    </section>

    <section class="TalkingSpreker2">

        <img class="TalkingSprekerImg2" />

        <section class="TalkingSprekerUitleg2">

            <h2 class="TalkingSprekerHeader2">
                @a.ActivityDescriptions[1].Title
            </h2>
            <p class="TalkingSprekerText2">
                @a.ActivityDescriptions[1].DescriptionText
            </p>

        </section>

        <button id = @Html.Raw(a.ActivityDescriptions[1].Title + "Button") name="AskAQuestion" type="button" class="TalkingButtonSpreker2">Ask Question</button>
        <button id = @Html.Raw(a.Name + "Button") name="BookNow" type="button" class="TalkingButtonBook">Book Now</button>
    </section>
    

</section>
}

